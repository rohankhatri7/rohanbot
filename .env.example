# RohanAI Environment Configuration
# Copy this file to .env and fill in your actual values

# ======================
# DISCORD CONFIGURATION
# ======================
# Get this from Discord Developer Portal > Applications > Your App > Bot
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# ======================
# HUGGING FACE
# ======================
# Get this from https://huggingface.co/settings/tokens (optional)
HUGGINGFACE_TOKEN=your_huggingface_token_here

# ======================
# API CONFIGURATION
# ======================
# API endpoint (adjust for your deployment)
API_URL=http://localhost:8000/api/chat

# Path to your fine-tuned model
MODEL_PATH=./models/tinyllama-finetuned

# ======================
# ENVIRONMENT
# ======================
ENVIRONMENT=production

# ======================
# SECURITY
# ======================
# Generate a random secret key for your application
SECRET_KEY=your_random_secret_key_here

# ======================
# DATABASE (Future use)
# ======================
DATABASE_URL=sqlite:///./data/app.db

# ======================
# LOGGING
# ======================
LOG_LEVEL=INFO
